<%= content_tag :li, id: "item-#{item.id}", class: 'item-task' do %>
<div class="pull-right completed">
  <%= link_to "", user_item_path(item.user, item), method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
</div>
<div class="media-body">
  <h3><%= item.task %></h3>
  <small><%= item.days_left %> day(s) remaining.</small>
</div>
<% end %>